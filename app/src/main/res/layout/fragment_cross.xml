                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/m_krest_iisus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="500р"
                    android:textIsSelectable="false"
                    android:textSize="30sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/n_krest_zolotoy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Крест «Золотой»"
                    android:textSize="30sp" />

                <ImageView
                    android:id="@+id/f_krest_zolotoy"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/krest_zolotoy" />

                <TextView
                    android:id="@+id/text_zolotoy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/specifications"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/text_krest_zolotoy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@string/krest_zolotoy"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/m_krest_zolotoy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="500р"
                    android:textIsSelectable="false"
                    android:textSize="30sp"
                    android:textStyle="bold" />


            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>