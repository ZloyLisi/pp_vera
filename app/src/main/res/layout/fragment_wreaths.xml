                    android:id="@+id/m_venok_kalla"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="500р"
                    android:textIsSelectable="false"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/n_venok_roz"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Венок «Из роз»"
                    android:gravity="center"
                    android:textSize="30sp"/>

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/venok_roz" />
                <TextView
                    android:id="@+id/text_specifications5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/specifications"
                    android:textSize="30sp" />
                <TextView
                    android:id="@+id/h_venok_roz"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/venok_kalla"
                    android:gravity="center_horizontal"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/m_venok_roz"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="500р"
                    android:textIsSelectable="false"
                    android:textSize="30sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>